    <modelVersion>4.0.0</modelVersion>

    <groupId>kjp</groupId>
    <artifactId>kafkaproject</artifactId>
    <version>1.0-SNAPSHOT</version>
     <repositories>
        <repository>
            <id>confluent</id>
            <url>http://packages.confluent.io/maven</url>
        </repository>
    </repositories>

    <dependencies>
        <dependency>
